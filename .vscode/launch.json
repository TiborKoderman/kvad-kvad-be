    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (http)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/kvad-be/bin/Debug/net9.0/kvad-be.dll",
            "args": [],
            "cwd": "${workspaceFolder}/kvad-be",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (http://localhost:5249)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Launch (https)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/kvad-be/bin/Debug/net9.0/kvad-be.dll",
            "args": [],
            "cwd": "${workspaceFolder}/kvad-be",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https://localhost:7245)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}